<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Drive Personal Vehicle Section -->
        <TextView
            android:text="Drive Personal Vehicle"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inputDriveDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter distance driven (km or miles)" />

        <Spinner
            android:id="@+id/spinnerDriveFuelType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/driveLogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log" />

            <Button
                android:id="@+id/driveEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/driveDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Take Public Transportation Section -->
        <TextView
            android:text="Take Public Transportation"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerPublicTransportType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inputPublicTransportTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter time spent (hours)" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/publicLogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log" />

            <Button
                android:id="@+id/publicEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/publicDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Cycling or Walking Section -->
        <TextView
            android:text="Cycling or Walking"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputCycleWalkDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter distance cycled or walked (km or miles)" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/cycleLogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log" />

            <Button
                android:id="@+id/cycleEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/cycleDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Flight Section -->
        <TextView
            android:text="Flight"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputFlightCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter number of flights taken" />

        <Spinner
            android:id="@+id/spinnerFlightType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/flightLogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log" />

            <Button
                android:id="@+id/flightEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/flightDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>