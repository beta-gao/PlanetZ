<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8dbe2"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="What best describes your diet?"
        android:textColor="#1b1b1e"
        android:fontFamily="monospace"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/radioGroup_diet_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_vegetarian"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/rounded_button_bg"
            android:button="@null"
            android:text="Vegetarian"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/radio_vegan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/rounded_button_bg"
            android:button="@null"
            android:text="Vegan"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/radio_pescatarian"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/rounded_button_bg"
            android:button="@null"
            android:text="Pescatarian (fish/seafood)"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <RadioButton
            android:id="@+id/radio_meat_based"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/rounded_button_bg"
            android:button="@null"
            android:text="Meat-based\n(eat all types of animal products)"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_bg"
        android:elevation="2dp"
        android:padding="12dp"
        android:text="Next"
        android:textSize="30sp"
        android:textColor="#FFFFFF" />
</LinearLayout>