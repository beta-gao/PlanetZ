<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Activity Type TextView -->
    <TextView
        android:id="@+id/activityType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activity Type"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activityEmission"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Activity Emission TextView -->
    <TextView
        android:id="@+id/activityEmission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.0 kg CO2e"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/activityType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1" />
</androidx.constraintlayout.widget.ConstraintLayout>