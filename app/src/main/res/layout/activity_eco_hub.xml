<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#d8dbe2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eco Hub"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#373f51"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Learning Resources -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learning Resources"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009999"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/learningResourceRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ffffff" />
        </androidx.cardview.widget.CardView>

        <!-- Market Trends -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market Trends"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009999"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/marketTrendRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ffffff" />
        </androidx.cardview.widget.CardView>

        <!-- Eco-Friendly Products -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eco-Friendly Products"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009999"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ecoProductRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ffffff" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>